<resources>

  <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="BaseDialogTheme" parent="Theme.AppCompat.Dialog">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:windowBackground">@drawable/dialog_background</item>
  </style>

  <style name="CastChooserTheme" parent="Theme.MediaRouter">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <!-- <item name="colorBackgroundFloating">@color/background</item> -->
    <item name="android:windowBackground">@drawable/dialog_background</item>
  </style>

  <style name="CastControllerTheme" parent="Theme.MediaRouter">
    <item name="colorPrimary">@color/background</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <!-- <item name="colorBackgroundFloating">@color/background</item> -->
    <item name="android:windowBackground">@drawable/dialog_background</item>
  </style>

  <style name="AppTheme" parent="BaseTheme"/>

  <style name="ItemContainer">
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:paddingLeft">@dimen/item_horizontal_padding</item>
    <item name="android:paddingTop">@dimen/item_vertical_padding</item>
    <item name="android:paddingRight">@dimen/item_horizontal_padding</item>
    <item name="android:paddingBottom">@dimen/item_vertical_padding</item>
  </style>

  <style name="ItemContainer.Playing">
    <item name="android:background">@color/divider</item>
  </style>

  <style name="ItemTitle">
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/title</item>
    <item name="android:textSize">16.0dp</item>
  </style>

  <style name="ItemTitle.Playing">
    <item name="android:textColor">@color/accent</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="ItemSubTitle">
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/subtitle</item>
    <item name="android:textSize">14.0dp</item>
  </style>

</resources>
